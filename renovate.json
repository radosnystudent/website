{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prHourlyLimit": 10,
  "rebaseWhen": "behind-base-branch",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "addLabels": ["lockfile"]
  },
  "labels": ["dependencies", "npm"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "addLabels": ["patch"],
      "autoApprove": true
    },
    {
      "matchUpdateTypes": ["minor"],
      "reviewers": ["radosnystudent"],
      "addLabels": ["minor"]
    },
    {
      "matchUpdateTypes": ["major"],
      "reviewers": ["radosnystudent"],
      "addLabels": ["major"]
    },
    {
      "matchUpdateTypes": ["pin"],
      "automerge": true,
      "addLabels": ["pin"],
      "autoApprove": true
    },
    {
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "addLabels": ["digest"],
      "autoApprove": true
    },
    {
      "matchUpdateTypes": ["bump"],
      "automerge": true,
      "addLabels": ["bump"],
      "autoApprove": true
    }
  ],
  "automergeType": "pr",
  "platformAutomerge": true,
  "dependencyDashboard": true,
  "schedule": ["at any time"],
  "prNotPendingHours": 8,
  "stabilityDays": 0
}
